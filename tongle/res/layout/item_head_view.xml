<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/head_view_civ"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/head_view_civ_fj"
        app:siBorderColor="@color/white"
        app:siBorderWidth="0dp" />

    <TextView
        android:id="@+id/head_view_info"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_weight="1"
        android:background="@drawable/head_view_des_fj"
        android:gravity="center" />

    <ImageView
        android:id="@+id/head_view_distance"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:background="@drawable/head_view_add"
        android:gravity="center" />
</LinearLayout>