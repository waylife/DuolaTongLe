<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ff00">

    <RelativeLayout
        android:id="@+id/view_head_search_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/view_head_search_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher" />

        <EditText
            android:id="@+id/view_head_search_et"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/view_head_search_iv"
            android:background="@android:color/white"
            android:cursorVisible="true"
            android:ellipsize="end"
            android:hint="搜索你感兴趣的标签"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/view_head_search_layout"
        android:background="#fff">

        <TextView
            android:id="@+id/view_head_search_tab1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="tab 1" />

        <TextView
            android:id="@+id/view_head_search_tab2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="tab 2" />

        <TextView
            android:id="@+id/view_head_search_tab3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="tab 3" />
    </LinearLayout>
</RelativeLayout>
