<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/head_view_civ"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/head_view_civ_fj"
        app:siBorderColor="@color/white"
        app:siBorderWidth="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/head_view_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风间"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/head_view_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离1 KM"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/head_view_add"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/head_view_add"
        android:gravity="center" />

</LinearLayout>